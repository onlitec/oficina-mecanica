# ===========================================
# CONFIGURAÇÃO DE PRODUÇÃO - OFICINA MECÂNICA
# ===========================================

# IMPORTANTE: Altere todas as senhas e chaves antes de usar em produção!

# Ambiente
NODE_ENV=production
LOG_LEVEL=info

# Portas dos serviços
APP_PORT=3000
HTTP_PORT=80
HTTPS_PORT=443
POSTGRES_PORT=5432
REDIS_PORT=6379

# Banco de Dados PostgreSQL
POSTGRES_DB=oficina_mecanica
POSTGRES_USER=oficina_user
POSTGRES_PASSWORD=ALTERE_ESTA_SENHA_EM_PRODUCAO_123!@#
DATABASE_URL=postgresql://oficina_user:ALTERE_ESTA_SENHA_EM_PRODUCAO_123!@#@postgres:5432/oficina_mecanica

# Segurança JWT (ALTERE OBRIGATORIAMENTE!)
JWT_SECRET=ALTERE_ESTA_CHAVE_SUPER_SECRETA_EM_PRODUCAO_DEVE_SER_MUITO_LONGA_E_ALEATORIA_123456789
JWT_EXPIRES_IN=7d

# CORS e Domínio
CORS_ORIGIN=https://seudominio.com.br
DOMAIN=seudominio.com.br

# Dados da Empresa
COMPANY_NAME=Oficina Mecânica Toledo
COMPANY_EMAIL=contato@oficinatoledomec.com.br
COMPANY_PHONE=(11) 99999-9999
COMPANY_ADDRESS=Rua das Oficinas, 123 - São Paulo/SP
COMPANY_CNPJ=12.345.678/0001-90

# Email/SMTP (Configure conforme seu provedor)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=sistema@oficinatoledomec.com.br
EMAIL_PASS=sua_senha_de_app_aqui
EMAIL_FROM_NAME=Sistema Oficina Toledo
EMAIL_FROM_ADDRESS=sistema@oficinatoledomec.com.br

# Redis (Cache e Sessões)
REDIS_PASSWORD=ALTERE_ESTA_SENHA_REDIS_EM_PRODUCAO_456!@#

# Configurações de Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_PATH=/app/uploads

# Backup Automático
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Caminhos de Dados (Volumes)
DATA_PATH=./data

# SSL/TLS (Para HTTPS)
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Monitoramento
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_LOGIN_MAX=5

# Session
SESSION_SECRET=ALTERE_ESTA_CHAVE_DE_SESSAO_EM_PRODUCAO_789!@#
SESSION_MAX_AGE=86400000

# Timezone
TZ=America/Sao_Paulo
