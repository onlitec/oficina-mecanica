    <div class="container">
        <div class="page-header">
            <h1 class="page-title">üîÑ Relat√≥rio de Movimenta√ß√£o Temporal</h1>
            <a href="/reports.html" class="btn btn-secondary">‚Üê Voltar</a>
        </div>
        
        <!-- Filtros -->
        <div class="filters">
            <div class="period-buttons">
                <button class="period-btn" onclick="setPeriod(7)">7 dias</button>
                <button class="period-btn" onclick="setPeriod(15)">15 dias</button>
                <button class="period-btn active" onclick="setPeriod(30)">30 dias</button>
                <button class="period-btn" onclick="setPeriod(60)">60 dias</button>
                <button class="period-btn" onclick="setPeriod(90)">90 dias</button>
            </div>
            
            <div class="filters-row">
                <div class="form-group">
                    <label for="startDate">Data Inicial:</label>
                    <input type="date" id="startDate">
                </div>
                
                <div class="form-group">
                    <label for="endDate">Data Final:</label>
                    <input type="date" id="endDate">
                </div>
                
                <div class="form-group">
                    <label for="partFilter">Filtrar por Pe√ßa:</label>
                    <select id="partFilter">
                        <option value="">Todas as pe√ßas</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label>&nbsp;</label>
                    <button class="btn" onclick="loadReport()">üîç Atualizar</button>
                </div>
            </div>
        </div>
        
        <div id="loading" class="loading">Carregando relat√≥rio...</div>
        <div id="error" class="error" style="display: none;"></div>
        
        <div id="content" style="display: none;">
            <!-- Informa√ß√µes do Per√≠odo -->
            <div class="period-info" id="periodInfo"></div>
            
            <!-- Cards de Resumo -->
            <div class="summary-cards">
                <div class="summary-card">
                    <div class="summary-value" id="totalMovements">0</div>
                    <div class="summary-label">Total de Movimenta√ß√µes</div>
                    <div class="trend-indicator" id="movementsTrend"></div>
                </div>
                
                <div class="summary-card">
                    <div class="summary-value" id="totalQuantity">0</div>
                    <div class="summary-label">Quantidade Total</div>
                    <div class="trend-indicator" id="quantityTrend"></div>
                </div>
                
                <div class="summary-card">
                    <div class="summary-value" id="totalValue">R$ 0,00</div>
                    <div class="summary-label">Valor Total</div>
                    <div class="trend-indicator" id="valueTrend"></div>
                </div>
                
                <div class="summary-card">
                    <div class="summary-value" id="dailyAverage">0</div>
                    <div class="summary-label">M√©dia Di√°ria</div>
                    <div class="trend-indicator" id="averageTrend"></div>
                </div>
            </div>
            
            <!-- Gr√°fico Temporal -->
            <div class="chart-card">
                <div class="chart-controls">
                    <button class="chart-type-btn active" onclick="setChartType('quantity')">üìä Quantidade</button>
                    <button class="chart-type-btn" onclick="setChartType('value')">üí∞ Valor</button>
                    <button class="chart-type-btn" onclick="setChartType('movements')">üîÑ Movimenta√ß√µes</button>
                </div>
                
                <h3 class="chart-title" id="chartTitle">üìà Movimenta√ß√£o de Quantidade ao Longo do Tempo</h3>
                <div class="chart-container">
                    <canvas id="temporalChart"></canvas>
                </div>
            </div>
            
            <!-- Tabela de Movimenta√ß√µes -->
            <div class="movements-table">
                <h3 class="table-title">üìã √öltimas Movimenta√ß√µes</h3>
                <table class="movement-table">
                    <thead>
                        <tr>
                            <th>Data</th>
                            <th>Pe√ßa</th>
