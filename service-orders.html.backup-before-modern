<body>
    <!-- Global menu will be inserted here by global-menu.js -->
    <script src="/modelo2-features.js"></script>
    
    <div class="container">
        <div class="page-header">
            <h1 class="page-title">üîß Ordens de Servi√ßo</h1>
            <a href="/service-order-form.html" class="btn btn-success">+ Nova Ordem de Servi√ßo</a>
        </div>
        
        <div class="filters">
            <div class="filters-row">
                <div class="form-group">
                    <label for="search">Buscar:</label>
                    <input type="text" id="search" placeholder="N√∫mero, cliente, placa...">
                </div>
                
                <div class="form-group">
                    <label for="status">Status:</label>
                    <select id="status">
                        <option value="">Todos</option>
                        <option value="OPEN">Aberta</option>
                        <option value="DIAGNOSING">Em Diagn√≥stico</option>
                        <option value="WAITING_APPROVAL">Aguardando Aprova√ß√£o</option>
                        <option value="APPROVED">Aprovada</option>
                        <option value="WAITING_PARTS">Aguardando Pe√ßas</option>
                        <option value="IN_PROGRESS">Em Execu√ß√£o</option>
                        <option value="WAITING_PAYMENT">Aguardando Pagamento</option>
                        <option value="COMPLETED">Conclu√≠da</option>
                        <option value="CANCELLED">Cancelada</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label for="priority">Prioridade:</label>
                    <select id="priority">
                        <option value="">Todas</option>
                        <option value="LOW">Baixa</option>
                        <option value="NORMAL">Normal</option>
                        <option value="HIGH">Alta</option>
                        <option value="URGENT">Urgente</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label>&nbsp;</label>
                    <button class="btn" onclick="loadServiceOrders()">üîç Buscar</button>
                </div>
            </div>
        </div>
        
        <div class="orders-table">
            <div id="loading" class="loading">Carregando ordens de servi√ßo...</div>
            <div id="error" class="error" style="display: none;"></div>
            
            <table id="ordersTable" style="display: none;">
                <thead>
                    <tr>
                        <th>N√∫mero</th>
                        <th>Cliente</th>
                        <th>Ve√≠culo</th>
                        <th>Reclama√ß√£o</th>
                        <th>Status</th>
                        <th>Prioridade</th>
                        <th>Criada em</th>
                        <th>A√ß√µes</th>
                    </tr>
                </thead>
                <tbody id="ordersBody">
                </tbody>
            </table>
            
            <div id="empty" class="empty" style="display: none;">
                <p>Nenhuma ordem de servi√ßo encontrada.</p>
                <a href="/service-order-form.html" class="btn btn-success">+ Criar Primeira Ordem</a>
            </div>
        </div>
        
        <div id="pagination" class="pagination" style="display: none;"></div>
    </div>
    
    <script>
        let currentPage = 1;
        let totalPages = 1;
        
        // Verificar autentica√ß√£o
        function checkAuth() {
            const user = localStorage.getItem('user');
            if (!user) {
                window.location.href = '/login.html';
                return null;
            }
            return JSON.parse(user);
        }
        
        // Logout
        function logout() {
            localStorage.removeItem('user');
            window.location.href = '/login.html';
        }
        
        // Carregar dados do usu√°rio
        function loadUserInfo() {
            const user = checkAuth();
            if (user) {
                document.getElementById('userName').textContent = `${user.name} (${user.role})`;
            }
        }
        
        // Carregar ordens de servi√ßo
        async function loadServiceOrders(page = 1) {
            try {
                showLoading();
                
                const search = document.getElementById('search').value;
                const status = document.getElementById('status').value;
                const priority = document.getElementById('priority').value;
                
                const params = new URLSearchParams({
                    page: page.toString(),
                    limit: '10'
                });
                
                if (search) params.append('search', search);
                if (status) params.append('status', status);
                if (priority) params.append('priority', priority);
                
                const response = await fetch(`/api/service-orders?${params}`);
                const data = await response.json();
                
                if (data.success) {
                    displayServiceOrders(data.data);
                    displayPagination(data.pagination);
                    currentPage = data.pagination.page;
                    totalPages = data.pagination.pages;
                } else {
                    showError(data.error || 'Erro ao carregar ordens de servi√ßo');
                }
            } catch (error) {
                showError('Erro de conex√£o: ' + error.message);
            }
        }
        
        // Exibir ordens na tabela
        function displayServiceOrders(orders) {
            const tbody = document.getElementById('ordersBody');
            
            if (orders.length === 0) {
                showEmpty();
                return;
            }
            
            tbody.innerHTML = orders.map(order => `
                <tr>
                    <td>
                        <div class="order-number">${order.number}</div>
                        <div class="customer-info">Criada por: ${order.createdBy.name}</div>
                    </td>
                    <td>
                        <div>${order.customer.name}</div>
                        <div class="customer-info">${order.customer.phone || ''}</div>
                    </td>
                    <td>
                        <div>${order.vehicle.brand} ${order.vehicle.model}</div>
                        <div class="vehicle-info">${order.vehicle.plate} - ${order.vehicle.year}</div>
                    </td>
                    <td>
                        <div title="${order.customerComplaint || 'Sem reclama√ß√£o'}">${truncateText(order.customerComplaint || 'Sem reclama√ß√£o', 30)}</div>
                    </td>
                    <td>
                        <span class="badge badge-${order.status.toLowerCase().replace('_', '-')}">
                            ${getStatusLabel(order.status)}
                        </span>
                    </td>
                    <td>
                        <span class="badge badge-${order.priority.toLowerCase()}">
                            ${getPriorityLabel(order.priority)}
                        </span>
                    </td>
                    <td>${formatDate(order.createdAt)}</td>
                    <td>
                        <div class="actions">
                            <button class="btn btn-sm" onclick="viewOrder('${order.id}')" title="Visualizar">üëÅÔ∏è</button>
                            <button class="btn btn-sm btn-warning" onclick="editOrder('${order.id}')" title="Editar">‚úèÔ∏è</button>
                            <button class="btn btn-sm" onclick="updateStatus('${order.id}')" title="Atualizar Status">üîÑ</button>
                            ${order.status !== 'COMPLETED' ? `<button class="btn btn-sm btn-danger" onclick="deleteOrder('${order.id}', '${order.number}')" title="Excluir">üóëÔ∏è</button>` : ''}
                        </div>
                    </td>
                </tr>
            `).join('');
            
            showTable();
        }
        
        // Fun√ß√µes auxiliares
        function getStatusLabel(status) {
            const labels = {
                'OPEN': 'Aberta',
                'DIAGNOSING': 'Em Diagn√≥stico',
                'WAITING_APPROVAL': 'Aguardando Aprova√ß√£o',
                'APPROVED': 'Aprovada',
                'WAITING_PARTS': 'Aguardando Pe√ßas',
                'IN_PROGRESS': 'Em Execu√ß√£o',
                'WAITING_PAYMENT': 'Aguardando Pagamento',
                'COMPLETED': 'Conclu√≠da',
                'CANCELLED': 'Cancelada'
            };
            return labels[status] || status;
        }
        
        function getPriorityLabel(priority) {
            const labels = {
                'LOW': 'Baixa',
                'NORMAL': 'Normal',
                'HIGH': 'Alta',
                'URGENT': 'Urgente'
            };
            return labels[priority] || priority;
        }
        
        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleDateString('pt-BR') + ' ' + date.toLocaleTimeString('pt-BR', { hour: '2-digit', minute: '2-digit' });
        }
        
        function truncateText(text, maxLength) {
            if (text.length <= maxLength) return text;
            return text.substring(0, maxLength) + '...';
        }
        
        // Exibir pagina√ß√£o
        function displayPagination(pagination) {
            const paginationDiv = document.getElementById('pagination');
            
            if (pagination.pages <= 1) {
                paginationDiv.style.display = 'none';
                return;
            }
            
            let paginationHTML = '';
            
            if (pagination.page > 1) {
                paginationHTML += `<button onclick="loadServiceOrders(${pagination.page - 1})">¬´ Anterior</button>`;
            }
            
            for (let i = 1; i <= pagination.pages; i++) {
                const active = i === pagination.page ? 'active' : '';
                paginationHTML += `<button class="${active}" onclick="loadServiceOrders(${i})">${i}</button>`;
            }
            
            if (pagination.page < pagination.pages) {
                paginationHTML += `<button onclick="loadServiceOrders(${pagination.page + 1})">Pr√≥ximo ¬ª</button>`;
            }
            
            paginationDiv.innerHTML = paginationHTML;
            paginationDiv.style.display = 'flex';
        }
        
        // A√ß√µes
        function viewOrder(id) {
            window.location.href = `/service-order-view.html?id=${id}`;
        }
        
        function editOrder(id) {
            window.location.href = `/service-order-form.html?id=${id}`;
        }
        
        function updateStatus(id) {
            // Implementar modal de atualiza√ß√£o de status
            const newStatus = prompt('Novo status:\n\nOPEN - Aberta\nDIAGNOSING - Em Diagn√≥stico\nWAITING_APPROVAL - Aguardando Aprova√ß√£o\nAPPROVED - Aprovada\nWAITING_PARTS - Aguardando Pe√ßas\nIN_PROGRESS - Em Execu√ß√£o\nWAITING_PAYMENT - Aguardando Pagamento\nCOMPLETED - Conclu√≠da\nCANCELLED - Cancelada');
            
            if (newStatus) {
                updateOrderStatus(id, newStatus);
            }
        }
        
        async function updateOrderStatus(id, status) {
            try {
                const response = await fetch(`/api/service-orders/${id}/status`, {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ status }),
                });
                
                const data = await response.json();
                
                if (data.success) {
                    alert('Status atualizado com sucesso!');
                    loadServiceOrders(currentPage);
                } else {
                    alert('Erro: ' + data.error);
                }
            } catch (error) {
                alert('Erro de conex√£o: ' + error.message);
            }
        }
        
        async function deleteOrder(id, number) {
            if (!confirm(`Tem certeza que deseja excluir a ordem de servi√ßo "${number}"?`)) {
                return;
            }
            
            try {
                const response = await fetch(`/api/service-orders/${id}`, {
                    method: 'DELETE'
                });
                
                const data = await response.json();
                
                if (data.success) {
                    alert('Ordem de servi√ßo exclu√≠da com sucesso!');
                    loadServiceOrders(currentPage);
                } else {
                    alert('Erro: ' + data.error);
                }
            } catch (error) {
                alert('Erro de conex√£o: ' + error.message);
            }
        }
        
        // Estados da interface
        function showLoading() {
            document.getElementById('loading').style.display = 'block';
            document.getElementById('error').style.display = 'none';
            document.getElementById('ordersTable').style.display = 'none';
            document.getElementById('empty').style.display = 'none';
            document.getElementById('pagination').style.display = 'none';
        }
        
        function showError(message) {
            document.getElementById('loading').style.display = 'none';
            document.getElementById('error').style.display = 'block';
            document.getElementById('error').textContent = message;
            document.getElementById('ordersTable').style.display = 'none';
            document.getElementById('empty').style.display = 'none';
            document.getElementById('pagination').style.display = 'none';
        }
        
        function showTable() {
            document.getElementById('loading').style.display = 'none';
            document.getElementById('error').style.display = 'none';
            document.getElementById('ordersTable').style.display = 'table';
            document.getElementById('empty').style.display = 'none';
        }
        
        function showEmpty() {
            document.getElementById('loading').style.display = 'none';
            document.getElementById('error').style.display = 'none';
            document.getElementById('ordersTable').style.display = 'none';
            document.getElementById('empty').style.display = 'block';
            document.getElementById('pagination').style.display = 'none';
        }
        
        // Event listeners
        document.getElementById('search').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                loadServiceOrders(1);
            }
        });
        
        // Inicializar
        document.addEventListener('DOMContentLoaded', function() {
            checkAuth();
            loadUserInfo();
            loadServiceOrders();
        });
    </script>
    <script src="/js/logo-manager.js"></script>
    <script src="/js/global-menu.js"></script>
    <script src="/modelo2-features.js"></script>
